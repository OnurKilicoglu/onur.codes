@model KisiselPortfoy.Core.Entities.HomePageInfo
@{
    ViewData["Title"] = "Detay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Anasayfa Üst Bölümü Detay</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.WelcomeTitle</dd>
    <dt class="col-sm-2">Açıklama</dt>
    <dd class="col-sm-10">@Model.WelcomeText</dd>
    <dt class="col-sm-2">Buton Metni</dt>
    <dd class="col-sm-10">@Model.ButtonText</dd>
    <dt class="col-sm-2">Buton Linki</dt>
    <dd class="col-sm-10">@Model.ButtonUrl</dd>
    <dt class="col-sm-2">Görsel</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="rounded shadow" style="max-width:160px;" />
        }
    </dd>
</dl>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
