@model IEnumerable<KisiselPortfoy.Core.Entities.HomePageInfo>
@{
    ViewData["Title"] = "Anasayfa Üst Bölümü";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Anasayfa Üst Bölümü</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ekle
    </a>
</div>

<table class="table table-bordered align-middle bg-white shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Buton Metni</th>
            <th>Buton Linki</th>
            <th>Görsel</th>
            <th width="180"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.WelcomeTitle</td>
                <td>@item.WelcomeText</td>
                <td>@item.ButtonText</td>
                <td>
                    <a href="@item.ButtonUrl" target="_blank">@item.ButtonUrl</a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="rounded shadow" alt="Hero" style="max-width:80px; max-height:50px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i> Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white"><i class="bi bi-info-circle"></i> Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
