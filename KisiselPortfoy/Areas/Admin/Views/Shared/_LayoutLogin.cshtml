@*
  Login sayfası için çok sade bir layout.
  ViewBag.Title ile başlık gönderebilirsin.
*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #f5f7fa;
        }
    </style>
</head>
<body>
    @RenderBody()
</body>
</html>
