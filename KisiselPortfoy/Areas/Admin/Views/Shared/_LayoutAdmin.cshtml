<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<link  rel="stylesheet" href="~/css/admin.css" />

    <style>
        body {
            background: #f5f7fa;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 220px;
            height: 100vh;
            background: #181c2f;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            z-index: 10;
            box-shadow: 2px 0 12px 0 rgba(24,28,47,0.09);
        }

        .sidebar-header {
            font-size: 1.4rem;
            font-weight: bold;
            letter-spacing: 1px;
            text-align: center;
            padding: 32px 0 22px 0;
            border-bottom: 1px solid #282b3f;
        }

        .sidebar a {
            color: #d4d6e2;
            text-decoration: none;
            padding: 15px 32px;
            font-size: 1.05rem;
            display: flex;
            align-items: center;
            transition: background 0.15s, color 0.15s;
        }

            .sidebar a.active, .sidebar a:hover {
                background: #27305a;
                color: #fff;
            }

            .sidebar a i {
                font-size: 1.3rem;
                margin-right: 12px;
            }

        .sidebar-footer {
            margin-top: auto;
            text-align: center;
            padding: 18px;
            font-size: 0.92rem;
            color: #8d91a4;
        }
        /* Sayfa içeriği sağa kaydırılsın */
        .content {
            margin-left: 220px;
            padding: 32px 24px;
        }
        @@media (max-width: 700px) {
            .sidebar

        {
            position: relative;
            width: 100%;
            height: auto;
            flex-direction: row;
            box-shadow: none;
        }

        .sidebar a {
            justify-content: center;
            padding: 12px 8px;
            font-size: 0.95rem;
        }

        .content {
            margin-left: 0;
            padding: 18px 6px;
        }

        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">Admin Panel</div>
        <a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>
        <a asp-area="Admin" asp-controller="Projects" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")">
            <i class="bi bi-kanban"></i> Projeler
        </a>
        <a asp-area="Admin" asp-controller="HomePageInfoes" asp-action="Index" class="nav-link">
            <i class="bi bi-window-stack"></i> Anasayfa Üst Bölümü
        </a>

        <a asp-area="Admin" asp-controller="ProfileInfoes" asp-action="Index" class="nav-link">
            <i class="bi bi-person-vcard"></i> Hakkımda
        </a>

        <a asp-area="Admin" asp-controller="ContactMessages" asp-action="Index">
            <i class="bi bi-envelope"></i> İletişim Mesajları
        </a>

        <a href="/" target="_blank" class="nav-link">
            <i class="bi bi-house-door"></i> Web sitesine Git
        </a>

        <a asp-area="Admin" asp-controller="Admin" asp-action="Logout">
            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
        </a>

        
        <div class="sidebar-footer">
            <span style="font-size: 0.85rem;">&copy; @DateTime.Now.Year | onur.codes</span>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
