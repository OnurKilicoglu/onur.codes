@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Admin Girişi";
}

<div class="d-flex align-items-center justify-content-center" style="min-height:100vh;">
    <div class="col-12 col-md-5 col-lg-4">
        <div class="card shadow p-4 border-0">
            <div class="text-center mb-4">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Admin" style="width:60px;height:60px;">
                <h3 class="mt-3 mb-1" style="font-weight:bold;">Admin Girişi</h3>
                <p class="text-muted mb-0">Yönetim paneline giriş yapınız.</p>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }
            <form method="post" autocomplete="off">
                <div class="mb-3">
                    <label for="username" class="form-label">Kullanıcı Adı</label>
                    <input type="text" name="username" id="username" class="form-control" required autofocus autocomplete="username" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" name="password" id="password" class="form-control" required autocomplete="current-password" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>
