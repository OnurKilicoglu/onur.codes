@model IEnumerable<KisiselPortfoy.Core.Entities.Project>
@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Projeler</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Yeni Proje
    </a>
</div>
<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card shadow-sm h-100 animate__animated animate__fadeInUp">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="max-height:170px;object-fit:cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/400x170?text=Görsel+Yok" class="card-img-top" alt="Görsel Yok" style="max-height:170px;object-fit:cover;">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text mb-2" style="min-height: 54px;">@item.Description</p>
                    <span class="text-muted" style="font-size:0.9rem;">
                        <i class="bi bi-calendar2-week"></i> @item.CreateDate.ToString("dd.MM.yyyy")
                    </span>
                    <div class="mt-auto d-flex justify-content-between gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Detay
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
