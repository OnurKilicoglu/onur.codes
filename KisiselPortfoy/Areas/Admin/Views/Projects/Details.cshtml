@model KisiselPortfoy.Core.Entities.Project

@{
    ViewData["Title"] = "Proje Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">Proje Detayı</h2>
    <div class="card shadow-lg border-0" style="max-width:680px;">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="max-height:270px;object-fit:cover;">
        }
        <div class="card-body">
            <h4 class="card-title mb-3">@Model.Title</h4>
            <p class="mb-3 text-secondary">@Model.Description</p>
            <div class="mb-2">
                <strong>Oluşturulma Tarihi:</strong>
                <span class="text-muted">@Model.CreateDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.CodeFileUrl))
            {
                <div class="mb-2">
                    <strong>Kod Dosyası:</strong>
                    <a href="@Model.CodeFileUrl" class="btn btn-sm btn-outline-primary ms-2" target="_blank">
                        <i class="bi bi-download"></i> İndir
                    </a>
                </div>
            }
        </div>
        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons ekli olsun! -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
