@model KisiselPortfoy.Core.Entities.Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Title ?? "Proje Detayı";
}
<style>
    .project-details-flex {
        display: flex;
        border-radius: 22px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 8px 36px 0 rgba(44,56,96,0.14);
        transition: box-shadow 0.3s, transform 0.2s;
        border: none;
        min-height: 330px;
    }

        .project-details-flex:hover {
            box-shadow: 0 16px 48px 0 rgba(44,56,96,0.20);
            transform: translateY(-4px) scale(1.01);
        }

    .project-details-img-col {
        flex: 1 1 0%;
        min-width: 0;
        background: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .project-details-img {
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 360px;
        object-fit: cover;
        border-radius: 0;
        display: block;
    }

    .project-details-info-col {
        flex: 1.3 1 0%;
        min-width: 0;
        padding: 2.3rem 2.5rem 2.3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .project-details-title {
        font-size: 2.1rem;
        font-weight: 800;
        color: #25314c;
        margin-bottom: 1.1rem;
        letter-spacing: 0.03em;
        word-break: break-word;
    }

    .project-details-date {
        font-size: 1.05rem;
        color: #7a8799;
        margin-bottom: 1.1rem;
        display: flex;
        align-items: center;
        gap: 7px;
    }

    .project-details-desc {
        font-size: 1.17rem;
        color: #323a46;
        margin-bottom: 1.6rem;
        line-height: 1.6;
    }

    .btn-success, .btn-outline-secondary {
        font-weight: 600;
        padding: 0.67rem 1.4rem;
        border-radius: 16px;
        font-size: 1.09rem;
        box-shadow: 0 2px 8px rgba(39,196,108,0.10);
        transition: all 0.19s;
    }

        .btn-success:hover {
            background: #23a15e;
            border-color: #23a15e;
        }

        .btn-outline-secondary:hover {
            background: #f5f7fa;
            color: #25314c;
            border-color: #b7bac9;
        }
    /* Responsive */
    @@media (max-width: 991px) {
        .project-details-flex

    {
        flex-direction: column;
        min-height: 0;
    }

    .project-details-img-col, .project-details-info-col {
        padding: 0;
    }

    .project-details-info-col {
        padding: 2rem 1.5rem 1.8rem 1.5rem;
    }

    .project-details-img {
        max-height: 210px;
    }

    .project-details-title {
        font-size: 1.45rem;
    }

    .project-details-desc {
        font-size: 1rem;
    }

    }
    @@media (max-width: 600px) {
        .project-details-flex

    {
        border-radius: 12px;
    }

    .project-details-img {
        max-height: 140px;
    }

    .project-details-info-col {
        padding: 1.2rem 1rem 1.2rem 1rem;
    }

    }

   
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="project-details-flex mb-4">
                <div class="project-details-img-col">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="project-details-img" alt="@Model.Title" />
                    }
                </div>
                <div class="project-details-info-col">
                    <h2 class="project-details-title">@Model.Title</h2>
                    <div class="project-details-date">
                        <i class="bi bi-calendar2-week"></i> @Model.CreateDate.ToString("dd.MM.yyyy")
                    </div>
                    <p class="project-details-desc">@Model.Description</p>
                    @if (!string.IsNullOrEmpty(Model.CodeFileUrl))
                    {
                        <a href="@Model.CodeFileUrl" target="_blank" class="btn btn-success mt-2" download>
                            <i class="bi bi-download"></i> Kod Dosyasını İndir
                        </a>
                    }
                    <div class="mt-4">
                        <a href="/Home/Projects" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Tüm Projeler
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
