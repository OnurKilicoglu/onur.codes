@using KisiselPortfoy.Core.Entities
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // kendi layout yolunu kullanabilirsin

    var hero = ViewBag.Hero as HomePageInfo;
    var projects = ViewBag.Projects as List<Project>;
}



<div class="container py-5">
    <!-- HERO BÖLÜMÜ -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h1 class="display-4 fw-bold mb-3">@hero?.WelcomeTitle <span>👋</span></h1>
            <p class="lead text-secondary mb-4">
                @hero?.WelcomeText
            </p>
            @if (!string.IsNullOrEmpty(hero?.ButtonText))
            {
                <a href="@hero?.ButtonUrl" class="btn btn-primary btn-lg shadow-sm">@hero.ButtonText <i class="bi bi-arrow-right"></i></a>
            }
        </div>
        <div class="col-lg-6 text-center">
            @if (!string.IsNullOrEmpty(hero?.ImageUrl))
            {
                <img src="@hero.ImageUrl" alt="Hoşgeldin görseli" class="img-fluid rounded-4 shadow-lg" style="max-height:340px;">
            }
        </div>
    </div>

    <!-- PROJELER KARTLARI -->
    @if (projects != null && projects.Any())
    {
        <div class="mb-2">
            <h2 class="mb-4 fw-bold">Projelerim</h2>
            <div class="row g-4">
                @foreach (var project in projects)
                {
                    <div class="col-md-4 mb-4">
                        <div class="project-image-card">
                            <img src="@project.ImageUrl" alt="@project.Title" class="project-img" />
                            <div class="project-overlay">
                                <a href="@Url.Action("ProjectDetails", "Home", new { id = project.Id })" class="project-detail-btn">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-4">
                <a href="@Url.Action("Projects", "Home")" class="btn btn-primary btn-lg">Tüm Projeleri Gör</a>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
