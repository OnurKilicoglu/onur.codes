@model KisiselPortfoy.Core.Entities.ProfileInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row align-items-center">
        <!-- PROFİL FOTOĞRAFI -->
        <div class="col-lg-5 text-center mb-4 mb-lg-0">
            <div class="about-profile-img shadow-lg animate__animated animate__fadeInLeft"
                 style="display:inline-block; border-radius: 2rem; overflow: hidden;">
                <img src="@Model.PhotoUrl" alt="@Model.FullName"
                     style="width:340px; height:340px; object-fit:cover; border-radius:2rem;" />
            </div>
        </div>
        <!-- HAKKIMDA METİN KISMI -->
        <div class="col-lg-7">
            <h1 class="fw-bold mb-2" style="font-size:2.6rem">
                Merhaba, ben <span style="color:#3677fd">@Model.FullName</span> <span>👋</span>
            </h1>
            <div class="mb-4 lead text-secondary animate__animated animate__fadeInDown" style="font-size:1.35rem;">
                @Model.Title
            </div>
            <div class="mb-4" style="font-size:1.07rem;">
                @Model.Description
            </div>
            <div class="p-4 mb-3 bg-white rounded-4 shadow" style="font-size:1.09rem;">
                <p><b>Uzmanlık Alanlarım:</b> @Model.Skills</p>
                <p><b>Deneğim:</b> @Model.Experience</p>
                <p><b>Hedeflerim:</b> @Model.Goals</p>
            </div>
            <div class="d-flex flex-column gap-2">
                <div>
                    <i class="bi bi-envelope-at"></i>
                    <b>E-posta:</b>
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </div>
                <div>
                    <i class="bi bi-instagram"></i>
                    <b>Instagram:</b>
                    <a href="@Model.Instagram" target="_blank">@Model.Instagram</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Animasyon için animate.css (isteğe bağlı) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<!-- Bootstrap Icons için -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    .about-profile-img {
        transition: box-shadow 0.3s, transform 0.3s;
    }

        .about-profile-img:hover {
            box-shadow: 0 8px 40px 0 rgba(41,45,50,0.16);
            transform: scale(1.03) rotate(-1deg);
        }
</style>
